<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')%>
<body>

    <%- include('../partials/nav.ejs')%>

    <div class="blogs content">
        <h2>All blogs</h2>

        <div>
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                <a class="single" href="/blog/<%= blog._id %>">
                  <br>
                  <h3 class=""><%= blog.title %></h3>  
                  <p class="snippet"><%= blog.snippet %></p>
                  <h5 class="title">Written in <%= blog.createdAt.toDateString() %></h5>
                </a>
                <% }) %>
              <% } else { %>
                <p>There are no blogs to display...</p>
              <% } %>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>
</body>
</html>